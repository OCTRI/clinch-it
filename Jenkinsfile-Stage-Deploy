pipeline {
  agent any
  options {
    buildDiscarder(logRotator(numToKeepStr: '3'))
  }
  environment {
  	GIT_URL = ''
    SERVER_NAME = 'octriapp02.acc.ohsu.edu'
    SERVER_PATH = '/opt/projects/clinch-it/clinch-it_stage'
  }
  parameters {
    string(name: 'VERSION', description: 'The version to deploy.')
  }
  stages {
    stage('Check Parameters') {
      steps {
        checkParams(params)
      }
    }
    stage('Prepare') {
      steps {
        deleteDir()
        checkoutMaster(env.GIT_URL)
      }
    }
    stage('Deploy') {
      steps {
        downloadArtifact('clinch-it', params.VERSION)
        dockerComposeDeploy('dev', env.SERVER_NAME, env.SERVER_PATH, 'artifactory')
      }
    }
  }
}
