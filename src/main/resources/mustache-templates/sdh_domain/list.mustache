
{{>layout/header}}
<div class="container">

	<h1>{{entityName}} List</h1>
	{{>components/messages}}
	<a href='{{req.contextPath}}{{baseRoute}}/new' class="new-entity btn btn-success"><i class="fas fa-plus-circle"></i> New</a>
	<table class='table table-striped table-bordered'>
		<thead>
		<tr>
			<th>Description</th>
			<th>Actions</th>
		</tr>
		</thead>
		<tbody>
		{{#entity_list}}
		<tr>
			<td>{{#description}}{{.}}{{/description}}</th>
			<td>{{>components/list_actions}}</td>
		</tr>
		{{/entity_list}}
		</tbody>
	</table>
</div>
{{>layout/footer}}