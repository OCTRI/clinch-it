
{{>components/form_start}}
{{#entity}}
	
    <div class="form-group">
        <label for="name">Name</label>
        <input class='form-control' type='text' name='name' value='{{#name}}{{.}}{{/name}}'  />
    </div>

    <div class="form-group">
        <label for="dateOfBirth">Date of birth</label>
        <input class='form-control' type='date' name='dateOfBirth' value='{{#dateOfBirth}}{{.}}{{/dateOfBirth}}' pattern='[0-9]{4}-[0-9]{2}-[0-9]{2}'/>
        <div class="invalid-feedback">Value must be formatted yyyy-mm-dd</div>
    </div>
    
{{/entity}}
{{>components/form_end}}
